<script type="text/javascript">



//查询数据
$(function () {
    var data = parseUrl();
    var acadId=parseInt(data['id']);
    $.ajax({
        type:"POST",
        url:"$projectname/academic/selectById.do",
        data:{"acadId":acadId},
        success:function (data) {
            var data = JSON.parse(data);
            $("#acadId").val(data.data.acadId);
            $("#authorRank").val(data.data.authorRank);
            $("#category ").val(data.data.category);
            $("#collectionSituation").val(data.data.collectionSituation);
            $("#novon").val(data.data.novon);
            $("#periodical").val(data.data.periodical);
            $("#publicationLevel").val(data.data.publicationLevel);
            $("#publishJournals").val(data.data.publishJournals);
            $("#releasingCode").val(data.data.releasingCode);
            $("#thesisName").val(data.data.thesisName);
            $("#fileId").val(data.data.fileId);
            var url="$projectname";
            url+=data.data.filepath.url;
            $("#img2").attr("src",url);



        }


    });


})
//`2提交数据
	$("#submit").click(function () {
	        //设置data数据
            var upload_file = document.getElementById("file").files[0];
            var formFile = new FormData();
            formFile.append("upload_file", upload_file);
            var data = formFile;

            var acadId=$("#acadId").val();
            acadId=parseInt(acadId)
			var authorRank=$("#authorRank").val();
            var category=$("#category").val();
            var collectionSituation=$("#collectionSituation").val();
            var novon=$("#novon").val();
            var periodical=$("#periodical").val();
            var publicationLevel=$("#publicationLevel").val();
            var publishJournals=$("#publishJournals").val();
            var releasingCode=$("#releasingCode").val();
            var thesisName=$("#thesisName").val();
            var fileId=null;
                //查看upload_file是否为空
                if(upload_file!=null) {
                    //不为空重新上传，拿到返回的fileid
                    $.ajax({
                        type: "POST",
                        url: "$projectname/academic/uploadAttachment.do",
                        data: data,
                        cache: false,
                        processData: false,
                        contentType: false,
                        success: function (data) {
                            data = JSON.parse(data);
                            fileId = data.data;
                            fileId=parseInt(fileId);
                            $.ajax({
                                type:"POST",
                                url:"$projectname/academic/update.do",
                                data:{
                                    "acadId":acadId,
                                    "authorRank":authorRank,
                                    "category":category,"collectionSituation":collectionSituation,
                                    "novon":novon,"periodical":periodical,
                                    "publicationLevel":publicationLevel, "publishJournals":publishJournals,
                                    "releasingCode":releasingCode,"thesisName":thesisName,"fileId":fileId
                                },
                                success: function (data) {
                                    var user=JSON.parse(data);
                                    if (user.status ==200){
                                        alert(user.msg);
                                        window.close();
                                        window.parent.location.replace("$projectname/academic/list");
                                    }else {
                                        layer.msg(user.msg, {icon: 1, time: 2000});
                                    }
                                }
                            });

                        }
                    });
                }else {
                    //更新academic表单
                    $.ajax({
                        type:"POST",
                        url:"$projectname/academic/update.do",
                        data:{
                            "acadId":acadId,
                            "authorRank":authorRank,
                            "category":category,"collectionSituation":collectionSituation,
                            "novon":novon,"periodical":periodical,
                            "publicationLevel":publicationLevel, "publishJournals":publishJournals,
                            "releasingCode":releasingCode,"thesisName":thesisName,"fileId":fileId
                        },
                        success: function (data) {
                            var user=JSON.parse(data);
                            if (user.status ==200){
                                alert(user.msg);
                                window.close();
                                window.parent.location.replace("$projectname/academic/list");
                            }else {
                                layer.msg(user.msg, {icon: 1, time: 2000});
                            }
                        }
                    });
                }

        }
	);



</script>
